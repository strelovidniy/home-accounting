@using MudBlazor
@using Blazor.Cropper
@using Microsoft.AspNetCore.Components.Forms

<MudDialog Style="width: 800px; overflow: hidden">
    <DialogContent>
        <MudGrid>
            @if (RawImage is not null)
            {
                <MudContainer>
                    <Cropper ImageFile="RawImage"
                             @ref="_cropper"
                             AspectRatio="@(1d)"
                             AnimeGifEnable="true"
                             RequireAspectRatio="true"
                             CropperHeight="375"
                             IsImageLocked="true"/>
                </MudContainer>
            }
            <MudItem xs="12"
                     sm="6"
                     Style="display: flex">
                <MudButton ButtonType="ButtonType.Button"
                           Variant="Variant.Filled"
                           Color="Color.Success"
                           Size="Size.Large"
                           Disabled="@_processing"
                           OnClick="@(() => SubmitAsync(_cts.Token))">
                    @if (_processing)
                    {
                        <MudProgressCircular Class="ms-n1"
                                             Size="Size.Small"
                                             Indeterminate="true"/>
                        <MudText Class="ms-2">
                            Uploading
                        </MudText>
                    }
                    else
                    {
                        <MudText>
                            Upload Avatar
                        </MudText>
                    }
                </MudButton>
                <MudSpacer />
            </MudItem>
            <MudItem xs="12"
                     sm="6"
                     Style="display: flex">
                <MudSpacer/>
                <MudFileUpload T="IBrowserFile" 
                               FilesChanged="UploadFiles"
                               Style="margin: 0;
                                      width: fit-content;">
                    <ButtonTemplate>
                        <MudButton HtmlTag="label"
                                   Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   Size="Size.Large"
                                   StartIcon="@Icons.Material.Filled.CloudUpload"
                                   Disabled="@_processing"
                                   for="@context">
                            Upload another image
                        </MudButton>
                    </ButtonTemplate>
                </MudFileUpload>
            </MudItem>
        </MudGrid>
    </DialogContent>
</MudDialog>